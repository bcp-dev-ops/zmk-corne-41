/* Implements custom system layer for common hardware interactions */
/* */

system: system {
    display-name = "System";
    bindings = <

        /* Top Row */
        /* ------------------------LEFT HAND --------------------------------------------*/   /* ------------------------RIGHT HAND ------------------------------------------------------*/
           &none              &none            &none           &none          &none               &kp C_MUTE &kp C_VOL_DN   &kp C_VOL_UP  &kp C_BRI_DN  &kp C_BRI_UP


        /* Home Row */
        /* ------------------------LEFT HAND --------------------------------------------*/   /* ------------------------RIGHT HAND ------------------------------------------------------*/
           &none              &none            &none           &none          &none               &none          &none            &none         &none                 &none

        /* Bottom Row */
        /* ------------------------LEFT HAND --------------------------------------------*/   /* ------------------------RIGHT HAND ------------------------------------------------------*/
        &bt BT_SEL 3       &bt BT_SEL 2     &bt BT_SEL 1    &bt BT_SEL 0      &bt BT_SEL 4        &none          &none            &none         &none                 &none 


        /* Thumbs */
        /* ------------------------LEFT HAND --------------------------------------------*/   /* ------------------------RIGHT HAND ------------------------------------------------------*/
                                            &none           &none             &none               &kp C_PP       &kp C_NEXT       &none

    >;
};
